<!-- Booking Start -->
<div class="container">
  <div class="shadow" style="padding: 35px;">
    <div class="row g-2">
      <div class="col-md-10">
        <div class="row g-2">
          <div class="col-md-6">
            <div class="date" id="date1" data-target-input="nearest">
              <input type="text" class="form-control" placeholder="<%= t ".check_in" %>"/>
            </div>
          </div>
          <div class="col-md-6">
            <div class="date" id="date2" data-target-input="nearest">
              <input type="text" class="form-control" placeholder="<%= t ".check_out" %>"/>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-2">
        <button class="btn btn-primary w-100"><%= t ".button_text" %></button>
      </div>
    </div>
  </div>
</div>
<!-- Booking End -->
<!-- Room Start -->
<div class="container-xxl py-5 row">
  <div class="col-2">
    filter
  </div>
  <div class="col-10">
    <div class="container">
      <div class="text-center">
        <h1 class="mb-5"><%= t "layouts.header.rooms" %></h1>
      </div>
      <div class="row g-4">
        <%= render @rooms %>
        <%== pagy_bootstrap_nav @pagy %>
      </div>
    </div>
  </div>
</div>
<!-- Room End -->
