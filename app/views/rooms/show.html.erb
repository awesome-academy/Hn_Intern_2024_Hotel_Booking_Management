<!-- Room Start -->
<div class="container-xxl py-5 row">
  <h1 class="text-center"><%= t ".room" %> <%= @room.name %></h1>
  <div class="col-8 offset-2 row">
    <div class="col-8">
      <div class="single-room-details-area mb-50">
        <div class="room-thumbnail-slides mb-50">
          <%= image_tag "img/carousel-2.jpg", class: "d-block w-100" %>
        </div>
        <div class="d-flex justify-content-between">
          <h2 class="m-4 mb-0"><%= t ".price" %></h2>
          <h2 class="m-4 mb-0"><%= number_to_currency @room.price %></h2>
        </div>
        <h2 class="m-4 mb-0"><%= t ".description" %></h2>
        <p class="m-4 mb-0"><%= @room.description %></p>
      </div>
      <!-- Room Service -->
      <div class="mb-50">
        <h2 class="m-4"><%= t ".facilities" %></h2>
        <ul style="list-style-type: none;">
          <% @room.facilities.each do |f| %>
            <li><i class="fa fa-check text-primary me-2"></i><%= t f.name %></li>
          <% end %>
        </ul>
      </div>
      <!-- Room Review -->
      <div class="mb-100">
        <h2 class="m-4 mb-0"><%= t ".review" %></h4>
        <!-- Single Review Area -->
        <div class="single-room-review-area d-flex align-items-center">
          <div class="m-5">
            <%= image_tag "img/carousel-2.jpg", style: "height: 120px; width: 120px" %>
          </div>
          <div class="reviwer-content">
            <div class="reviwer-title-rating d-flex align-items-center justify-content-between">
              <div class="reviwer-title">
                <span>27 Aug 2019</span>
                <h6>Brandon Kelley</h6>
              </div>
              <div class="reviwer-rating">
                <i class="fa fa-star text-primary"></i>
                <i class="fa fa-star text-primary"></i>
                <i class="fa fa-star text-primary"></i>
                <i class="fa fa-star text-primary"></i>
                <i class="fa fa-star text-primary"></i>
              </div>
            </div>
            <p>Neque porro quisquam est, qui dolorem ipsum quia dolor sit amet, consectetur, adipisci velit, sed quia non numquam eius modi tempora.</p>
          </div>
        </div>
      </div>
    </div>
    <div class="col-12 col-lg-4">
      <!-- Hotel Reservation Area -->
      <div class="hotel-reservation--area mb-100">
        <form action="#" method="post">
          <div class="form-group mb-30">
            <h5 class="text-center"><%= t ".date" %></h5>
            <div class="row no-gutters">
              <div class="col-12">
                <input type="text" class="input-small form-control" name="checkInDate" placeholder="<%= t "rooms.index.check_in" %>">
              </div>
              <div class="col-12 mt-2">
                <input type="text" class="input-small form-control" name="checkOutDate" placeholder="<%= t "rooms.index.check_out" %>">
              </div>
            </div>
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-primary w-100 mt-2"><%= t ".button_check" %></button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<!-- Room End -->
