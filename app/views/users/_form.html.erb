<%= form_for @user, locals do |f| %>
  <%= render "shared/error_messages", object: f.object %>

  <div class="row g-3">
    <div class="col-md-6">
      <div class="form-floating">
        <%= f.text_field :full_name, class: "form-control", placeholder: "Full name" %>
        <%= f.label :full_name %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-floating">
        <%= f.email_field :email, class: "form-control", placeholder: "Email" %>
        <%= f.label :email %>
      </div>
    </div>

    <div class="col-md-12">
      <div class="form-floating">
        <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
        <%= f.label :password %>
      </div>
    </div>

    <div class="col-md-12">
      <div class="form-floating">
        <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Password confirm" %>
        <%= f.label :password_confirmation %>
      </div>
    </div>

    <div class="col-12">
      <%= f.submit yield(:button_text), class:"btn btn-primary w-100 py-3" %>
    </div>
  </div>
<% end %>
