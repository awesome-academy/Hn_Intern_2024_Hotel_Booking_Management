<% if object.errors.any? %>
  <div style="color: red">
    <div class="alert alert-danger">
      <%= t ".the_form_contains" %>
      <%= t ".error_count", count: object.errors.count %>
    </div>
    <ul>
      <% object.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
