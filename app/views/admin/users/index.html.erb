<div class="container mt-5 w-100">
  <div class="px-5">
    <div class="row">
      <div class="col-lg-2 col-sm-12">
        <div class="my-2">
          <h1><%= t ".filter" %></h1>
          <%= search_form_for @q, url: admin_users_path do |f| %>
            <div class="mb-3">
              <%= f.label :id_eq, t(".id"), class: "form-label" %>
              <%= f.search_field :id_eq, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= f.label :full_name_cont, t(".full_name"), class: "form-label" %>
              <%= f.search_field :full_name_cont, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= f.label :email_cont, t(".email"), class: "form-label" %>
              <%= f.search_field :email_cont, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= f.label :activated, t(".activated"), class: "form-label" %>
              <%= f.select :activated, status_user_options, {include_blank: true}, class: "form-select" %>
            </div>

            <%= f.submit t(".filter"), class: "btn btn-primary w-100" %>
          <% end %>
        </div>
      </div>
      <div class="col-lg-10 col-sm-12">
        <h1><%= t ".list_user" %></h1>
        <hr class="my-4">
        <div>
          <table class="table table-striped table-bordered">
            <thead>
              <tr class="text-primary">
                <th scope="col"><%= sort_link @q, :id, t(".id") %></th>
                <th scope="col"><%= sort_link @q, :full_name, t(".full_name") %></th>
                <th scope="col"><%= sort_link @q, :email, t(".email") %></th>
                <th scope="col"><%= t ".activated" %></th>
                <th scope="col"><%= t ".action" %></th>
              </tr>
            </thead>
            <tbody>
              <%= render @users %>
            </tbody>
          </table>
          <%== pagy_bootstrap_nav @pagy if @pagy.pages > 1 %>
        </div>
      </div>
    </div>
  </div>
</div>
