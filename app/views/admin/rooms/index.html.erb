<div class="container mt-5 w-100">
  <div class="px-5">
    <div class="row">
      <div class="col-lg-2 col-sm-12">
        <div class="my-2">
          <h1><%= t ".filter" %></h1>
          <%= search_form_for @q, url: admin_rooms_path do |f| %>
            <div class="row row-cols-2 g-1">
              <%= f.label :id_eq, t(".id") %>
              <%= f.search_field :id_eq %>

              <%= f.label :name_cont, t(".name") %>
              <%= f.search_field :name_cont %>

              <%= f.label :view_type_eq, t(".view_type") %>
              <%= f.select :view_type_eq, view_type_options, {include_blank: true} %>

              <%= f.label :room_type_id_eq, t(".room_type") %>
              <%= f.select :room_type_id_eq, room_type_id_options, {include_blank: true} %>

              <%= f.label :created_at_gteq, t(".created_at_from") %>
              <%= f.date_field :created_at_gteq %>

              <%= f.label :created_at_lteq, t(".created_at_to") %>
              <%= f.date_field :created_at_lteq %>

              <%= f.label :status_eq, t(".status") %>
              <%= f.select :status_eq, active_status_options, {include_blank: true} %>
            </div>

            <%= f.submit t(".filter"), class: "w-100 mt-3" %>
          <% end %>
        </div>
      </div>
      <div class="col-lg-10 col-sm-12">
        <h1><%= t ".list_room" %></h1>
        <%= link_to t(".add_new"), new_admin_room_path, class: "btn btn-outline-danger" %>
        <hr class="my-4">
        <div>
          <table class="table table-striped table-bordered">
            <thead>
              <tr class="text-primary">
                <th scope="col"><%= sort_link @q, :id, t(".id") %></th>
                <th scope="col"><%= sort_link @q, :name, t(".name") %></th>
                <th scope="col"><%= sort_link @q, :view_type, t(".view_type") %></th>
                <th scope="col"><%= sort_link @q, :room_type_id, t(".room_type") %></th>
                <th scope="col"><%= sort_link @q, :created_at, t(".created_at") %></th>
                <th scope="col"><%= sort_link @q, :status, t(".status") %></th>
                <th scope="col"><%= t ".action" %></th>
              </tr>
            </thead>
            <tbody>
              <%= render @rooms%>
            </tbody>
          </table>
          <%== pagy_bootstrap_nav @pagy %>
        </div>
      </div>
    </div>
  </div>
</div>
