<!-- Booking Start -->
<div class="container-xxl py-5">
  <h4 class="text-center"><%= t ".title" %></h4>
  <div class="container">
    <div class="row g-5 align-items-center">
      <div class="col-lg-5 border-end border-dark border-2">
        <h4><%= t ".total" %>: <%= current_user.bookings.count %></h4>
        <div class="row">
          <div class="col-lg-8 col-sm-12 mb-3">
            <h4><%= t ".filter" %></h4>
            <%= search_form_for @q, url: bookings_path do |f| %>
              <div class="row">
                <div class="col-lg-5 col-sm-12">
                  <%= f.label :status_eq, t(".status"), class: "form-label" %>
                  <%= f.select :status_eq, status_options, {include_blank: true}, class: "form-select" %>
                </div>

                <div class="col-lg-5 col-sm-12">
                  <%= f.label :book_day_eq, t(".book_day"), class: "form-label" %>
                  <%= f.date_field :book_day_eq, class: "form-control" %>
                </div>

                <div class="col-lg-2 col-sm-12 d-flex align-items-end">
                  <%= f.submit t(".filter"), class: "btn btn-dark" %>
                </div>
              </div>
            <% end %>
          </div>
          <div class="col-lg-4 col-sm-12 mb-3">
            <h4><%= t ".sort" %></h4>
            <%= sort_link @q, :id, t(".code"), class: "link-secondary p-2 d-block" %>
            <%= sort_link @q, :book_day, t(".book_day"), class: "link-secondary p-2 d-block" %>
            <%= sort_link @q, :status, t(".status"), class: "link-secondary p-2 d-block" %>
          </div>
        </div>

        <% if @bookings.empty? %>
          <%= t ".no_booking_request" %>
        <% else %>
          <%= render @bookings %>
          <%== pagy_bootstrap_nav @pagy %>
        <% end %>

      </div>
      <div class="col-lg-7">
        <div class="border border-secondary shadow rounded-3" id="detail-booking">
          <div id="show-detail-booking" >
            ...
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Booking End -->
